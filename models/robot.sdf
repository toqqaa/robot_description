<link name='lidar_link'>
      <pose relative_to='base_link'>0.23529 0 0.085747 0 0 0</pose>  <!-- Adjusted pose -->

      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>0.2</mass>
        <inertia>
          <ixx>0.0002</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.0002</iyy>
          <iyz>0</iyz>
          <izz>0.0002</izz>
        </inertia>
      </inertial>
      <visual name='lidar_visual'>
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>package://robot_description/meshes/lidar_link.STL</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.0 0.0 0.0 1</diffuse>
          <ambient>0.0 0.0 0.0 1</ambient>
        </material>
      </visual>
      <collision name='lidar_collison'>
        <pose>0 0 0  0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1 1 1</scale>
            <uri>package://robot_description/meshes/lidar_link.STL</uri>
          </mesh>
        </geometry>
      </collision>
 <sensor name="lidar_link" type="gpu_lidar">
        <gz_frame_id>lidar_link</gz_frame_id>
        <topic>scan</topic>
        <update_rate>30</update_rate>
        <lidar>
          <scan>
            <horizontal>
              <samples>2800</samples>
              <resolution>1</resolution>
              <min_angle>-1.5707</min_angle>
              <max_angle>1.5707</max_angle>
            </horizontal>
            <vertical>
              <samples>1</samples>
              <resolution>0.1</resolution>
              <min_angle>0.0</min_angle>
              <max_angle>0.0</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.15</min>
            <max>25</max>
            <resolution>0.01</resolution>
          </range>
          <frame_id>/lidar_link</frame_id>
        </lidar>
           <always_on>1</always_on>
            <visualize>true</visualize>
      </sensor>
    </link>

    <joint name='base_to_lidar_joint' type='fixed'>
      <!-- <pose>0.23529 0 0.085747 0 0 0</pose> -->
      <parent>base_link</parent>
